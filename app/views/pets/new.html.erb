<h1> Rehome your pet</h1>


<%= form_for @pet, url: {action: "create"} do |form|%>
   <%= form.label 'Owner Phone No'  %>
    <%= form.number_field :number %>

   <br>

    <%= form.label "Pet type"%>
    <%= form.text_field :name%>

   <br>
    
   <%= form.label 'pet age' %>
   <%= form.number_field :age %>
   <br>

   <%= form.label 'pet image' %>
   <%= form.text_field :img %>
   <br>

    <%= form.label 'description' %>
    <%= form.text_area :description%>
     <br>


   <%= form.submit 'find home' %>
   <br>
   <%=link_to 'Back', pets_path %>

<%end%>


